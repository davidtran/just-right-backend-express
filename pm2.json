{
  "apps": [
    {
      "name": "ProfessorAI API",
      "script": "npm",
      "args": "start -p 6500",
      "max_memory_restart": "2G",
      "node_args": "--max-old-space-size=2048",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "combine_logs": true,
      "out_file": "logs/app.log",
      "error_file": "logs/error.log",
      "env": {
        "NODE_ENV": "production"
      },
      "restart_delay": 3000,
      "kill_timeout": 10000,
      "wait_ready": true,
      "listen_timeout": 50000
    }
  ]
}